{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"ignore": ["/node_modules/**", "/.next/**"],
		"enabled": true,
		"indentStyle": "space",
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingComma": "es5"
		}
	}
}
